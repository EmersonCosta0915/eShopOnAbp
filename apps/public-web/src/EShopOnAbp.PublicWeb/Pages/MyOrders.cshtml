@page
@using EShopOnAbp.Localization
@using Microsoft.Extensions.Localization
@using System.Globalization
@model EShopOnAbp.PublicWeb.Pages.MyOrdersModel

@inject IStringLocalizer<EShopOnAbpResource> L

@section scripts {
    <abp-script src="/client-proxies/basket-proxy.js"/>
    <abp-script src="/Pages/myOrders.js"/>
}

@section styles{
    <abp-style src="/Pages/myOrders.css"/>
}

<div>
    <strong>@Model.MyOrders.Count sipariş</strong> verildi.
</div>

@foreach (var order in Model.MyOrders)
{
    <div class="card order-item">
        <div class="card-header">
            <div class="row">
                <div class="col">
                    <div>Sipariş Tarihi</div>
                    <div>@order.OrderDate.ToString("dd MMMM yyyy")</div>
                </div>
                <div class="col">
                    <div>TOPLAM</div>
                    <div>@order.Items.Sum(q => q.UnitPrice)</div>
                </div>
                <div class="col">
                    <div>TESLİMAT ADRESİ</div>
                    <div>@order.Address.Description</div>
                </div>
                <div class="col">
                    <div>SİPARİŞ NO @order.OrderNo.ToString("N0", new NumberFormatInfo() {NumberGroupSeparator = " "})</div>
                </div>
            </div>
        </div>
        <div class="card-body">
            @foreach (var item in order.Items)
            {
                <abp-card class="order-item m-3">
                    <abp-card-body>
                        <div class="row m-3">
                            <h3>@order.OrderStatus</h3>
                        </div>
                        <abp-row>
                            <abp-column size="_2">
                                <img class="img-size" src="/product-images/@item.PictureUrl"/>
                            </abp-column>
                            <abp-column size-lg="_4">
                                <div>@item.ProductName</div>
                                <div>Ürünü iade edebileceğiniz son tarih: @order.OrderDate.AddMonths(1).ToString("dd MMMM yyyy")</div>
                                <div class="mt-3">
                                    <abp-button icon="fas fa-cart-plus" class="btn btn-warning buy-again" text="Tekrar Satın Alın" data-product-id="@item.ProductId"></abp-button>
                                </div>
                            </abp-column>
                            <abp-column offset="_3" size="_2">
                                <abp-row class="pb-3"><abp-button class="btn btn-light shadow" disabled="true" abp-tooltip-right="Not available yet">Ürünleri iade et</abp-button></abp-row>
                                <abp-row><abp-button class="btn btn-light shadow" disabled="true" abp-tooltip-right="Not available yet">Ürün yorumu yazın</abp-button></abp-row>
                            </abp-column>
                        </abp-row>
                    </abp-card-body>
                </abp-card>
            }
        </div>
    </div>
    <hr/>
}














